<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Felipe Alves Gomes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SSE_ASSESSMENT_PROJECT.styles.css" asp-append-version="true" />
</head>
    <body>
        <header>
            <div class="container">
                <div class="text-center">
                    <div class="clock">
                        <span id="hours"></span>
                        <span>:</span>
                        <span id="minutes"></span>
                        <span>:</span>
                        <span id="seconds"></span>
                    </div>
                </div>
            </div>
        </header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light custom-bg border-bottom box-shadow mb-3">
            <div class="container">
                <div class="d-flex justify-content-center align-items-center w-100">
                    <h2 class="text-white">Felipe Alves Gomes</h2>
                </div>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="indicators">
                        <div class="mouse-info">
                            <div class="position-square">
                                <p>X Position</p>
                                <span id="xPosition">0</span>
                            </div>
                        </div>
                        <div class="mouse-info">
                            <div class="position-square">
                                <p>Y Position</p>
                                <span id="yPosition">0</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex justify-content-center align-items-center w-100">
                        <main role="main" class="pb-3">
                            @RenderBody()
                            <div class="pb-3 align-items-center">
                                <ul id="listItems" class="list-group"></ul>
                                <button id="listItemsButton" class="btnn ripple m-2">Sort</button>
                            </div>
                        </main>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="carousel">
                        <div class="carousel-container w-150">

                            <div class="carousel-item active">
                                <img src="https://img.freepik.com/fotos-gratis/um-cupe-mini-vermelho-dirigindo-na-estrada-com-alta-velocidade_114579-4060.jpg?t=st=1692401204~exp=1692401804~hmac=4fdd13a2171fa1c7304f2c7ee65cff2eb28c7a4cc82d319e5995fa7f52b7319a" alt="Image 1" class="d-block w-100">
                            </div>

                            <div class="carousel-item">
                                <img src="https://img.freepik.com/fotos-gratis/um-estacionamento-de-jipe-azul-na-zona-publica_114579-4042.jpg?t=st=1692401204~exp=1692401804~hmac=487ae2acdf03974503a2f3eaaa189c6ea65947a8615da09304e2a2eb336894d9" alt="Image 2" class="d-block w-100">
                            </div>

                            <div class="carousel-item">
                                <img src="https://img.freepik.com/fotos-premium/carro-suv-eletrico-de-estetica-premium-em-design-noturno-da-cidade-generative-ai_813420-30.jpg" alt="Image 3" class="d-block w-100">
                            </div>

                        </div>
                        <button class="carousel-prev"><i class="fas fa-chevron-left"></i></button>
                        <button class="carousel-next"><i class="fas fa-chevron-right"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <footer class="border-top footer text-muted custom-bg-footer">
            <div class="text-center">
                &copy; <a href="https://allari.com/" target="_blank">Allari</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>